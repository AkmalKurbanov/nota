header.header
  .container
    .header__wrap 
      .header__col
        .logo
          a(href="#")
            img(src="assets/img/logo.webp", alt="")  
        .search.active
          .search__input-wrap
            i.icon-search
            .search__input
              input(type="text" placeholder="Найти...")
          button.btn.btn--mc Поиск
          .search__dropdown
            ul
              mixin result(title) 
                li.search__dropdown-result
                  a(href="#")=title
              +result('giacomo+puccini')     
              +result('genshin')     
              +result('gurenge')     
              +result('gravity falls')     
             
      .header__col
        .header__control 
          a(href="#" title="Поиск").header__control-item.search-btn
            i.icon-search 
          a(href="#" title="Облако").header__control-item
            i.icon-cloud 
          a(href="#" title="Войти").header__control-item.log-in
            i.icon-login
